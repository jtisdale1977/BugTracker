                                        <tr>
                                            <td>@Html.DisplayFor(model => comment.Comment)</td>
                                            <td>@Html.DisplayFor(model => comment.Created)</td>
                                            <td>@Html.DisplayFor(model => comment.UserId)</td>
                                        </tr>
                                    }
