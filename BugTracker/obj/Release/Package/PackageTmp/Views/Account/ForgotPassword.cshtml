@model BugTracker.Models.ForgotPasswordViewModel



<!DOCTYPE html>
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="format-detection" content="telephone=no">
    <meta charset="UTF-8">
    <meta name="description" content="Violate Responsive Admin Template">
    <meta name="keywords" content="Super Admin, Admin, Template, Bootstrap">
    <title>Bug Tracker</title>

    <!-- CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/form.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/generics.css" rel="stylesheet">
</head>
<body id="skin-blur-blue">
    <section id="login">
        <header>
            <h1>Did You Forget Again?</h1>
            <p> </p>
        </header>
        <div class="clearfix"></div>
        <!-- Forgot Password -->
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
                @Html.AntiForgeryToken()
        <form class="box animated tile" id="box-reset">
            <h2 class="m-t-0 m-b-15">Reset Password</h2>
            <p> </p>
            <input type="email" class="login-control m-b-20" placeholder="Email Address">
            <input type="submit" class="btn btn-sm m-r-5" value="Email Link" />
            @*<button class="btn btn-sm m-r-5">Reset Password</button>*@
            <small>@Html.ActionLink("Already have an Account?", "Login")</small>
            @*<small><a class="box-switcher" data-switch="box-login" href="">Already have an Account?</a></small>*@
        </form>
        }
    </section>
    <!-- Javascript Libraries -->
    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script> <!-- jQuery Library -->
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- All JS functions -->
    <script src="~/js/functions.js"></script>
    <script src="~/js/jsLand/jquery-1.9.1.min.js"></script>
    <script src="~/js/jsLand/owl.carousel.js"></script>
    <script src="~/js/jsLand/jquery.magnific-popup.js" type="text/javascript"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>


