@model BugTracker.Models.RegisterViewModel

<!DOCTYPE html>
<!--[if IE 9 ]><html class="ie9"><![endif]-->
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <meta name="format-detection" content="telephone=no">
    <meta charset="UTF-8">
    <meta name="description" content="Violate Responsive Admin Template">
    <meta name="keywords" content="Super Admin, Admin, Template, Bootstrap">
    <title>Bug Tracker</title>

    <!-- CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/form.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/generics.css" rel="stylesheet">
</head>
<body id="skin-blur-blue">
    <section id="login2">
        <header>
            <h1>Welcome!</h1>
            <p> </p>
        </header>
        <div class="clearfix"></div>
        <!-- Register -->
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="tile" id="LG1">
                <h2 class="tile-title">Register</h2>
                <div class="tile-config dropdown">
                    <a data-toggle="dropdown" href="" class="tooltips tile-menu" title="" data-original-title="Options"></a>
                    <ul class="dropdown-menu dropdown-menu-alt animated lightSpeedIn" id="flip">
                        <li><a href="@Url.Action("IndexLand", "Home")">Back To Landing Page</a></li>
                    </ul>
                </div>
                <form role="form" class="p-15">
                    <div class="form-group m-b-15">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name", id = "TB" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group m-b-15">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name", id = "TB" })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group m-b-15">
                        @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", placeholder = "Username", id = "TB" })
                        @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group m-b-15">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address", id = "TB" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group m-b-15">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", id = "TB" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group m-b-15">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password", id = "TB" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    @*<div class="form-group m-b-15">
                        @Html.LabelFor(m => m.UserPhoto, new { @class = "col-md-2 control-label", id = "userphoto" })
                    </div>
                    <div class="form-group m-b-15">
                        <input type="file" name="UserPhoto" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" />
                    </div>*@

                    <input type="submit" value="Register" class="btn btn-block btn-alt" id="TB1" />
                    <button class="btn btn-block btn-alt" id="TB">@Html.ActionLink("Already have an Account?", "Login")</button>
                </form>
            </div>
        }
    </section>
    <!-- Javascript Libraries -->
    <!-- jQuery -->
    <script src="~/js/jquery.min.js"></script> <!-- jQuery Library -->
    <!-- Bootstrap -->
    <script src="~/js/bootstrap.min.js"></script>

    <!--  Form Related -->
    <script src="~/js/icheck.js"></script> <!-- Custom Checkbox + Radio -->
    <!-- All JS functions -->
    <script src="~/js/functions.js"></script>
    <script src="~/js/jsLand/jquery-1.9.1.min.js"></script>
    <script src="~/js/jsLand/owl.carousel.js"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
  </body>
</html>
