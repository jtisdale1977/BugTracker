                    <li class="active">Data</li>*@
            </ol>

            <h4 class="page-title">MEMBER MANAGEMENT</h4>

            <div class="block-area" id="tableHover">
                <h3 class="block-title">Members</h3>
                <div class="table-responsive overflow">
                    <table class="table table-bordered table-hover tile" id="myTable">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                                <th>@Html.DisplayNameFor(model => model.LastName)</th>
                                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                                <th>@Html.DisplayNameFor(model => model.DisplayName)</th>
                                <th>@Html.DisplayNameFor(model => model.Roles)</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => user.FirstName)</td>
                                    <td>@Html.DisplayFor(model => user.LastName)</td>
                                    <td>@Html.DisplayFor(model => user.UserName)</td>
                                    <td>@Html.DisplayFor(model => user.DisplayName)</td>

                                    @{var urh = new UserRolesHelper();}

                                    <td>
                                        @foreach (var role in urh.ListUserRoles(user.Id))
                                        {
                                            @role <br />
                                        }
                                    </td>
                                    <td id="itd2">
                                        <div class="btn-group-vertical m-r-10">

                                            <button id="ED" type="button" class="btn btn-xs btn-alt">@Html.ActionLink("Edit User Info ", "UserManagement", "Admin", new { userId = user.Id }, null)</button>

                                            <button id="DT" type="button" class="btn btn-xs btn-alt">@Html.ActionLink(" Assign Roles ", "RolesAssigned", "Admin", new { userId = user.Id }, null)</button>

                                            <button type="button" class="btn btn-xs btn-alt">@Html.ActionLink(" Dashboard", "Index", "Home")</button>
                                        </div>
                                    </td>
                                </tr>
                                        }
                        </tbody>
                    </table>
                    <br />
                </div>
            </div>
