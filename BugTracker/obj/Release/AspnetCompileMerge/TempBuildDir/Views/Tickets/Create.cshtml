        <!-- Content -->
        <section id="content" class="container">

            <h4 class="page-title">TICKET CREATION</h4>
            <br />

            <!-- Input Masking -->
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.Created)
                @Html.HiddenFor(model => Model.Updated)

                <div class="block-area" id="input-masking">

                    <h3 class="block-title">Create A New Ticket</h3>

                    <br />

                    <p>Start typing on feilds below</p>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Title</label>
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", placeholder = "..." } })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Description</label>
                            <textarea class="form-control overflow" rows="3" placeholder="..."></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Created</label>
                            <input type="text" class="input-sm form-control" placeholder="@Model.Created" disabled>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Updated</label>
                            <input type="text" class="input-sm form-control" placeholder="@Model.Updated" disabled>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Project</label>
                            <input type="text" class="input-sm form-control" placeholder="@Model.ProjectId" disabled>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Type</label>
                            @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control", id = "dd", placeholder = "..." })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Priority</label>
                            @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control", id = "dd", placeholder = "..." })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Status</label>
                            @Html.DropDownList("TicketStatusId", null, htmlAttributes: new { @class = "form-control", id = "dd", placeholder = "..." })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Owner</label>
                            @Html.DropDownList("OwnerUserId", null, htmlAttributes: new { @class = "form-control", id = "dd", placeholder = "..." })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-8 m-b-15">
                            <label>Ticket Assigned To</label>
                            @Html.DropDownList("AssignedToUserId", null, htmlAttributes: new { @class = "form-control", id = "dd", placeholder = "..." })
                        </div>
                    </div>
                </div>

                    <div class="row">
                        <div class="block-area" id="text-editor">
                            <h3 class="block-title">Comments</h3>
                            <br />
                            <p>Begin typing your ticket comment description below</p>
                            <div class="wysiwye-editor"></div>
                        </div>
                    </div>

                    @*<div class="row">
                            <div class="col-md-3 m-b-15">
